<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

	<PropertyGroup>
		<Nullable>enable</Nullable>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<TargetFrameworks>net5-windows;netcoreapp3.1;net48;net472</TargetFrameworks>
		<LangVersion>8.0</LangVersion>
		<UseWPF>true</UseWPF>
		<Authors>Mircea Staicu</Authors>
		<RepositoryUrl>https://github.com/mircea21S/RichCanvas</RepositoryUrl>
		<Company />
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Copyright>Mircea Staicu</Copyright>
		<PackageProjectUrl>https://github.com/mircea21S/RichCanvas</PackageProjectUrl>
		<PackageTags>wpf mvvm infinite-canvas canvas controls net-core-3-1 net5</PackageTags>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Description>
			WPF Control library
			Infinite canvas with panning, zooming, scrolling and other customizable functions, designed for MVVM.
		</Description>
		<PackageReleaseNotes>
			v2.2.0:
				New features:
					-Redefined ExtenSize and EnableNegativeScrolling functionality
					-Added RealTimeDragging property
					-Added Select, Unselect events on container
					-Added Drag events on container
				Bugs:
					-Fix scrolling bug on resize on window
					-Fix SelectedItems null exception when not initalized
					-Fix on Scale and TranslateOffset not updating the scroll
					-Fix on zoom - keep scale the same
				Improvements:
					-Drag performance improvement not calling Arrange
		</PackageReleaseNotes>
		<AssemblyVersion>1.0.0.0</AssemblyVersion>
		<FileVersion>1.0.0.0</FileVersion>
		<Version>2.2.0</Version>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<PackageIconUrl />
	</PropertyGroup>

</Project>
