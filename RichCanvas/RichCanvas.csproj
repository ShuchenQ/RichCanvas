<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

	<PropertyGroup>
		<Nullable>enable</Nullable>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<TargetFrameworks>net5-windows;netcoreapp3.1;net48;net472</TargetFrameworks>
		<LangVersion>8.0</LangVersion>
		<UseWPF>true</UseWPF>
		<Authors>Mircea Staicu</Authors>
		<RepositoryUrl>https://github.com/mircea21S/RichCanvas</RepositoryUrl>
		<Company />
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Copyright>Mircea Staicu</Copyright>
		<PackageProjectUrl>https://github.com/mircea21S/RichCanvas</PackageProjectUrl>
		<PackageTags>wpf mvvm infinite-canvas canvas controls panning zooming infinite-scrolling selection net-core-3-1 net5</PackageTags>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Description>
			WPF Control library - Infinite canvas with panning, zooming, scrolling and other customizable functions, designed for MVVM.
		</Description>
		<PackageReleaseNotes>
			v2.4.1:
				Bugfixes:
					-Fixed panning error due to not capturing the mouse
					-Update UI when changing DisableScroll value
					-Disabled scroll on zoom when DisableScroll is set to true
				Improvements:
					-Added comments for all properties on RichItemsControl
				New features:
					-Added VerticalScrollBarVisibility DependencyProperty to update vertical scrollbar visibility
					-Added HorizontalScrollBarVisibility DependencyProperty to update horizontal scrollbar visibility
		</PackageReleaseNotes>
		<AssemblyVersion>1.0.0.0</AssemblyVersion>
		<FileVersion>1.0.0.0</FileVersion>
		<Version>2.4.1</Version>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<PackageIconUrl />
	</PropertyGroup>

</Project>
